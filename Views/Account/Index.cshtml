


<div class="container" style="margin-top:10%">
    <!-- Row to contain columns -->
    <div class="row">
        <!-- Centered column on medium-sized screens with offset -->
        <div class="col-md-4 offset-md-4 alert alert-info">
            <!-- Login form header -->
            <h3 class="text-center">Login</h3>
            
            <!-- Login form -->
            <form id="loginForm">
                <!-- Form group for email input -->
                <div class="form-group mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input class="form-control" type="email" name="Email" id="logEmail" placeholder="Email" />
                    </div>
                    </div>
                <div class="form-group mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-lock"></i></span>
                        <input class="form-control" type="password" name="Password" id="logPassword" placeholder="Password" />
                    </div>
                    </div>
                <div class="form-group mb-3">
                    <button class="btn btn-info form-control" type="submit" asp-area="" asp-action="Index"><i class="bi bi-box-arrow-in-right"></i>Login</button>
                </div>
